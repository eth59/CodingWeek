<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="codingweek.controllers.GameOverController"
            prefWidth="600" prefHeight="400"
            style="-fx-background-color: black;">
    <!--    Zone CENTRE : On affiche une image    -->
    <center>
        <ImageView fx:id="imageCenter"
                   fitWidth="600"
                   preserveRatio="true"
                   pickOnBounds="true" />
    </center>

    <!--    Zone BOTTOM : Un conteneur HBox pour placer le bouton "Accueil" Ã  droite    -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="accueilButton" text="Accueil" />
        </HBox>
    </bottom>
</BorderPane>
