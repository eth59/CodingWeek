<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="codingweek.controllers.ConfigWindowController">
    <children>
        <VBox spacing="10" alignment="CENTER" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <Label text="Game Configuration" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <HBox spacing="10" alignment="CENTER">
                <Label text="Board Size:" />
                <TextField fx:id="boardSizeInput" promptText="Enter a size (3-7)" />
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Label text="Select Category:" />
                <ComboBox fx:id="categoryDropdown" />
            </HBox>
            <Button text="Start Game" onAction="#onStartGame" />
        </VBox>
    </children>
</AnchorPane>
