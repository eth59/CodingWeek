<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="codingweek.controllers.StatsController">
    <top>
        <fx:include source="menuBar.fxml" />
    </top>
    <center>
        <!-- Wrap the entire VBox in a ScrollPane -->
        <ScrollPane fitToWidth="true">
            <VBox spacing="10" alignment="CENTER">
                <VBox.margin>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </VBox.margin>
                <Label text="Game Statistics" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                
                <!-- General stats labels -->
                <Label fx:id="gamesLaunchedLabel" text="Games Launched: 0"/>
                <Label fx:id="blueTeamWinsLabel" text="Blue Team Wins: 0"/>
                <Label fx:id="redTeamWinsLabel" text="Red Team Wins: 0"/>
                <Label fx:id="blueTeamClueSubmissionsLabel" text="Blue Team Clues Given: 0"/>
                <Label fx:id="redTeamClueSubmissionsLabel" text="Red Team Clues Given: 0"/>

                <!-- Detailed clue stats -->
                <VBox spacing="10"> <!-- Reduced spacing -->
                    <Label text="Blue Team Clue Details:"/>
                    <ScrollPane fitToWidth="true">
                        <ListView fx:id="blueTeamClueStatsList" prefHeight="200"/>
                    </ScrollPane>
                    <Label text="Red Team Clue Details:"/>
                    <ScrollPane fitToWidth="true">
                        <ListView fx:id="redTeamClueStatsList" prefHeight="200"/>
                    </ScrollPane>
                </VBox>


                <!-- Dropdown for selecting data type -->
                <HBox spacing="10" alignment="CENTER">
                    <Label text="Select Data to Display:"/>
                    <ComboBox fx:id="dataSelector" prefWidth="200"/>
                </HBox>

                <!-- Chart placeholder -->
                <StackPane VBox.vgrow="ALWAYS">
                    <PieChart fx:id="pieChart" visible="false" minHeight="300" minWidth="300"/>
                    <BarChart fx:id="barChart" visible="false" minHeight="300" minWidth="300">
                        <xAxis>
                            <CategoryAxis fx:id="categoryAxis" label="Category"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis fx:id="numberAxis" label="Value"/>
                        </yAxis>
                    </BarChart>
                </StackPane>
            </VBox>
            <Button text="Resume" fx:id="resumeButton"
                style="-fx-background-color: rgb(180, 73, 55);
                        -fx-text-fill: white;
                        -fx-font-size: 18px;
                        -fx-background-radius: 20;" />
        </ScrollPane>
    </center>
</BorderPane>
