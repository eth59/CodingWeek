<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="codingweek.controllers.StatsController">
    <top>
        <fx:include source="menuBar.fxml" />
    </top>
    <center>
        <VBox spacing="10" alignment="CENTER">
            <VBox.margin>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </VBox.margin>
            <Label text="Game Statistics" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            
            <!-- General stats labels -->
            <Label fx:id="gamesLaunchedLabel" text="Games Launched: 0"/>
            <Label fx:id="blueTeamWinsLabel" text="Blue Team Wins: 0"/>
            <Label fx:id="redTeamWinsLabel" text="Red Team Wins: 0"/>
            <Label fx:id="blueTeamClueSubmissionsLabel" text="Blue Team Clues Given: 0"/>
            <Label fx:id="redTeamClueSubmissionsLabel" text="Red Team Clues Given: 0"/>

            <!-- Dropdown for selecting data type -->
            <HBox spacing="10" alignment="CENTER">
                <Label text="Select Data to Display:"/>
                <ComboBox fx:id="dataSelector" prefWidth="200"/>
            </HBox>

            <!-- Chart placeholder -->
            <StackPane>
                <PieChart fx:id="pieChart" visible="false"/>
                <BarChart fx:id="barChart" visible="false">
                    <xAxis>
                        <CategoryAxis fx:id="categoryAxis" label="Category"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis fx:id="numberAxis" label="Value"/>
                    </yAxis>
                </BarChart>
            </StackPane>
        </VBox>
    </center>
</BorderPane>
